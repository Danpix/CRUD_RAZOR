@model CrudRazorCore.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<h1>Eliminar Alumno</h1>

<h3>¿Estás seguro de que deseas eliminar este registro?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Matricula</dt>
        <dd class="col-sm-10">@Model.Matricula</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Carrera</dt>
        <dd class="col-sm-10">@Model.Carrera</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Empresa Dual</dt>
        <dd class="col-sm-10">@Model.EmpresaDual</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Matricula" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
